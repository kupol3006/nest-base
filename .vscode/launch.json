{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nest Debug",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nest",
            "args": [
                "start",
                "--watch"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "inspector",
            "port": 9229,
            "autoAttachChildProcesses": true,
            "envFile": "${workspaceFolder}/.env",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}